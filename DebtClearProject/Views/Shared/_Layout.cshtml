@inject SignInManager<User> signInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Theme tittle -->
    <title>Alons | Perfect Business Consulting Html Template</title>

    <!-- Theme style CSS -->
    <link href="~/css/style.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="~/https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="~/https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="~/Images/1-24c12f20.ico" type="image/x-icon">
</head>
<body>

    <!-- Header Top Area -->
    <div class="header_top_area">
        <div class="container">
            <div class="header_top_inner row m-0">
                <ul class="top_menu col-lg-6 col-md-7 p-0">
                    <li><a href="~/#">Career</a></li>
                    <li><a href="~/#">Iobs</a></li>
                    <li><a href="~/#">Support</a></li>
                </ul>
                <div class="right_menu col-lg-6 col-md-5 p-0">
                    <ul class="right_nav">
                            @if (signInManager.IsSignedIn(User))
                            {
                                <li><a asp-action="ViewProfile" asp-controller="User" class="customA">Profile</a></li>
                                <li><a asp-action="Index2" asp-controller="Debts" class="customA">My Debts</a></li>
                                <li><a asp-action="UserIndex" asp-controller="Transactions" class="customA">My Transactions</a></li>
                                <form asp-action="Logout" asp-controller="Account" method="post" class="right_nav" style="margin-left:20px; margin-top:11px;">
                                    <li> <input type="submit" class="btn btn-outline-danger" value="Logout" /></li>
                                 </form>
                            }
                            else
                            {
                                <li><a asp-action="Register" asp-controller="Account" class="customA">Register</a></li>
                                <li><a asp-action="Login" asp-controller="Account" class="customA">Login</a></li>
                            }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Header Top Area -->
    <!-- Achieve your financial -->
    <section class="achieve_financial_area">
        <div class="container">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </div>
    </section>
    <!-- Achieve your financial -->
    <!-- Footer Area -->
    <footer class="footer_area">
        <div class="container">
            <div class="footer_inner row">
                <div class="col-xl-4 col-md-5 col-sm-7 footer_logo wow fadeIn">
                 @*    <a href="~/index.html"><img src="~/images/footer-logo.png" alt=""></a> *@
                    <p>© 2025 <a href="~/#">DebtClear</a>. All rights reserved</p>
                    <ul class="footer_social">
                        <li><a href="~/#"></a></li>
                        <li><a href="~/#"></a></li>
                        <li><a href="~/#"></a></li>
                        <li><a href="~/#"></a></li>
                    </ul>
                </div>
                <div class="footer_widget col-xl-2 col-md-4 col-sm-5 wow fadeIn" data-wow-delay="0.2s">
                    <h4>About</h4>
                    <ul class="footer_nav">
                        <li><a href="~/#">How it Works</a></li>
                        <li><a href="~/#">Guarantee</a></li>
                        <li><a href="~/#">Security</a></li>
                        <li><a href="~/contact.html">Contact</a></li>
                        <li><a href="~/#">Our story</a></li>
                    </ul>
                </div>
                <div class="footer_widget col-xl-2  col-md-3 col-sm-4 wow fadeIn" data-wow-delay="0.4s">
                    <h4>Solution</h4>
                    <ul class="footer_nav">
                        <li><a href="~/#">Car Loan</a></li>
                        <li><a href="~/#">Personal Loan</a></li>
                        <li><a href="~/#">Education Loan</a></li>
                        <li><a href="~/#">Business Loan</a></li>
                    </ul>
                </div>
                <div class="footer_widget col-xl-2  col-md-5 col-sm-4 wow fadeIn" data-wow-delay="0.6s">
                    <h4>Need help?</h4>
                    <ul class="footer_nav">
                        <li><a href="~/#">Find a branch</a></li>
                        <li><a href="~/contact.html">Contact us</a></li>
                        <li><a href="~/faq.html">FAQ</a></li>
                        <li><a href="~/#">APR</a></li>
                    </ul>
                </div>
                <div class="footer_widget col-xl-2  col-md-4 col-sm-4 wow fadeIn" data-wow-delay="0.8s">
                    <h4>Save &amp; Invest </h4>
                    <ul class="footer_nav">
                        <li><a href="~/#">Credit Cards</a></li>
                        <li><a href="~/#">Mortgages</a></li>
                        <li><a href="~/#">Home Equity</a></li>
                        <li><a href="~/#">Lines of Credit</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <!-- End Footer Area -->
    <!-- Scroll Top Button -->
    <button class="scroll-top">
        <i class="fa fa-angle-double-up"></i>
    </button>


    <!-- jQuery v3.3.1 -->
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <!-- Bootstrap v4.0.0 -->
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <!-- Rev slider js -->
    <script src="~/vendors/revolution/js/jquery.themepunch.tools.min.js"></script>
    <script src="~/vendors/revolution/js/jquery.themepunch.revolution.min.js"></script>
    <script src="~/vendors/revolution/js/extensions/revolution.extension.actions.min.js"></script>
    <script src="~/vendors/revolution/js/extensions/revolution.extension.slideanims.min.js"></script>
    <script src="~/vendors/revolution/js/extensions/revolution.extension.layeranimation.min.js"></script>
    <script src="~/vendors/revolution/js/extensions/revolution.extension.navigation.min.js"></script>
    <script src="~/vendors/revolution/js/extensions/revolution.extension.kenburn.min.js"></script>
    <script src="~/vendors/revolution/js/extensions/revolution.extension.video.min.js"></script>
    <!-- Extra Plugin -->
    <script src="~/vendors/animate-css/wow.min.js"></script>
    <script src="~/vendors/counterup/jquery.waypoints.min.js"></script>
    <script src="~/vendors/counterup/jquery.counterup.min.js"></script>
    <script src="~/vendors/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/vendors/bootstrap-selector/jquery.nice-select.min.js"></script>
    <!-- Theme js / Custom js -->
    <script src="~/js/theme.js"></script>
</body>
</html>